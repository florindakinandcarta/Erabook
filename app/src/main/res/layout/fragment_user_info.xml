<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/backUserInfo"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_margin="@dimen/space20"
            android:background="@null"
            android:contentDescription="@string/desc_img"
            android:focusable="false"
            android:src="@drawable/arrow_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/user_info_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/space20"
            android:text="@string/user_info"
            android:textSize="@dimen/textXL"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/backUserInfo" />

        <TextView
            android:id="@+id/user_info_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/space20"
            android:text="@string/user_info_desc"
            android:textSize="@dimen/textMedium"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/user_info_title" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/update_name_input"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space20"
            android:focusable="false"
            android:hint="@string/user_name"
            app:boxStrokeColor="@color/primary"
            app:boxStrokeWidth="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/user_info_text">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/update_username_input"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space20"
            android:focusable="false"
            android:hint="@string/username_label"
            app:boxStrokeColor="@color/primary"
            app:boxStrokeWidth="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/update_name_input">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/update_mobile_input"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space20"
            android:focusable="false"
            android:hint="@string/mobile_label"
            app:boxStrokeColor="@color/primary"
            app:boxStrokeWidth="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/update_username_input">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/update_location_input"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space20"
            android:focusable="false"
            android:hint="@string/location_label"
            app:boxStrokeColor="@color/primary"
            app:boxStrokeWidth="2dp"
            app:layout_constraintEnd_toStartOf="@+id/update_location_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/update_mobile_input">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <ImageButton
            android:id="@+id/update_location_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@null"
            android:contentDescription="@string/desc_img"
            android:focusable="false"
            android:scaleType="centerCrop"
            android:src="@drawable/map_location"
            app:layout_constraintBottom_toBottomOf="@id/update_location_input"
            app:layout_constraintEnd_toEndOf="@id/update_mobile_input"
            app:layout_constraintStart_toEndOf="@id/update_location_input"
            app:layout_constraintTop_toTopOf="@id/update_location_input" />

        <Button
            android:id="@+id/update_birthday_input"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_margin="@dimen/space20"
            android:background="@null"
            android:backgroundTint="@color/lightb"
            android:text="@string/birthday_label"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/update_location_input"/>


        <Button
            android:id="@+id/update_submit_info_button"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_margin="@dimen/space20"
            android:text="@string/update_profile"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/update_birthday_input"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>